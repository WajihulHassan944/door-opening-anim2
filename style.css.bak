* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Dongle', sans-serif;
}

body {
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
   
}

.overallWrapper {
    width: 400px;
    height: 600px;
    perspective: 600px;
    box-shadow: -10px 10px 40px rgba(0, 0, 0, 0.25);
    overflow: hidden; /* Added line */
}

.wrapper img {
    width: 100%;
    height: 100%;
}

.wrapper {
    position: relative;
    width: 100%;
    height: 100%;
    transform-style: preserve-3d;
    transform-origin: center center;
    transition: 3s;
}

.door {
  width: 51%;
  height: 87%;
  position: absolute;
  left: 97px;
  top: 57px;
  transition: 3s;
  transform-origin: right center; /* Adjusted line */
  transform-style: preserve-3d;
  background-image: url("images/wall3.png");
  background-repeat: no-repeat;
  background-size: 100% 100%;
  cursor: pointer;
  opacity:1;
  
}

.wrapper.open .door {
  transform: rotateY(150deg);
  opacity:0;
}

h1#message {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(0);
    background: black;
    color: white;
    font-size: 20px;
    text-align: center;
    opacity: 0;
    transition: 3s;
    z-index: 1;
	display:flex;
	justify-content:center;
	align-items:center;
	flex-direction:column;
	padding:20px;
}

h1#message.open {
    transform: translate(-50%, -50%) scale(1);
    opacity: 1;
	display:flex;
	justify-content:center;
	align-items:center;
	flex-direction:column;
	padding:20px;
}

h1#message .fa-times {
    display: none;
    position: absolute;
    top: 10px;
    right: 10px;
    color: white;
    cursor: pointer;
}

h1#message.open .fa-times {
    display: block;
}

.fa-quote-left {
    font-size: 50px;
    margin-bottom: 20px;
}

.fa-times {
    font-size: 25px;
}

.fa-times:hover {
    color: red;
}
