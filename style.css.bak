*{
	margin:0;
	padding:0;
	box-sizing:border-box;
	font-family:'Dongle',sans-serif;
}
body{
	height:100vh;
	background-image:url("https://i.ibb.co/bv2SP6b/Image-1.jpg");
	background-repeat:no-repeat;
	background-size:100% 100%;
	background-position:center;
	display:flex;
	align-items:center;
	justify-content:center;
	perspective:600px;
}
.frame{
	width:250px;
	height:520px;
	position:relative;
	margin-bottom:140px;
	transform:rotate(1deg);
	display:flex;
	align-items:center;
	justify-content:center;
	background-color:#03071e;
}
.frame h1{
	font-size:40px;
	text-transform:uppercase;
	color:#f2cc8f;
	text-align:center;
}
.door{
	width:100%;
	height:100%;
	position:absolute;
	left:0;
	top:0;
	transition:1s;
	transform-origin:right;
	transform-style:preserve-3d;
	background-image:url("https://i.ibb.co/KL0X386/ei-1684563768593-removebg-preview.png");
	background-repeat:no-repeat;
	background-size:100% 100%;
	cursor:pointer;
	}

.frame.open .door {
  transform: rotateY(150deg);
}


